{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["Example", "ExampleExpo", "scripts", "docusaurus", "docs"],

  "compilerOptions": {
    "types": ["react-native"],
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "target": "ESNext",
    "isolatedModules": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "importsNotUsedAsValues": "error"
  }
}
